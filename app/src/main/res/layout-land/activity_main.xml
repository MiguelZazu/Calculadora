<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/textoarriba"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="right"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/textoabajo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="right"
        android:textSize="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <TableLayout
            android:layout_width="0dp"
            android:stretchColumns="*"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.6">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/boton1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"/>
                <Button
                    android:id="@+id/boton2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"/>
                <Button
                    android:id="@+id/boton3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/boton4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"/>
                <Button
                    android:id="@+id/boton5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"/>
                <Button
                    android:id="@+id/boton6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/boton7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"/>
                <Button
                    android:id="@+id/boton8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8"/>
                <Button
                    android:id="@+id/boton9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/boton0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"/>
                <Button
                    android:id="@+id/botonigual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:text="="/>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="0dp"
            android:stretchColumns="*"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.2">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/botonborrar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DEL"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/botonmultiplicar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/botondividir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="/"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/botonsumar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/botonrestar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"/>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="0dp"
            android:stretchColumns="*"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.2">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/botonseno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SIN"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/botoncoseno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="COS"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/botontangente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TAN"/>

            </TableRow>
        </TableLayout>


    </LinearLayout>




</LinearLayout>